@model List<Basvuru>
@using BusinessLayer.Concrete
@using DataAccessLayer.Concrete
@using EntityLayer.Concrete

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}
<h1>Başvuranların Listesi</h1>
<html>
<head>
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }
    </style>
</head>
<body>

    <br />
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Öğrenci No</th>
            <th>Bölüm</th>
            <th>Email</th>
            <th>Teslimat Adresi</th>
            <th>Başvuru Sebebi</th>
            @*   <th>Detaylar</th> *@
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.User.Ad</td>
                <td>@item.User.Soyad</td>
                <td>@item.User.OgrNo</td>
                <td>@item.User.Bolum</td>
                <td>@item.User.Email</td>
                <td>@item.Adres</td>
                <td>@item.BasvuruNedeni</td>
            </tr>

        }
    </table>
</body>
</html>

